---
const { Total, Preparation, Cooking } = Astro.props;
---

<article>
  <h2>Preparation time</h2>
  <ul>
    <li><strong>Total:</strong> {Total}</li>
    <li><strong>Preparation:</strong> {Preparation}</li>
    <li><strong>Cooking:</strong> {Cooking}</li>
  </ul>
</article>

<style lang="scss">
  article {
    padding: 1rem;
    background: rgb(123, 40, 79, 0.15);
    padding-bottom: 1.5rem;
    border-radius: 0.75rem;

    h2 {
      color: hsl(332, 51%, 32%);
      margin-bottom: 1rem;
      font-size: 1.75rem;
    }
    ul {
      margin-left: 1rem;
      li {
        font-size: 1.25rem;
        & + li {
          margin-top: 0.5rem;
        }
      }
    }
  }
</style>
