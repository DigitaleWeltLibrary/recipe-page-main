---
const { Calories, Carbs, Protein, Fat } = Astro.props;
---

<hr />
<article>
  <h2>Nutrition</h2>
  <p>
    The table below shows nutritional values per serving without the additional
    fillings.
  </p>
  <section>
    <div>
      <p>Calories</p>
      <p>{Calories}</p>
    </div>

    <div>
      <p>Carbs</p>
      <p>{Carbs}</p>
    </div>
    <div>
      <p>Protein</p>
      <p>{Protein}</p>
    </div>

    <div>
      <p>Fat</p>
      <p>{Fat}</p>
    </div>
  </section>
</article>

<style class="scss">
  article {
    p {
      text-align: justify;
      font-size: 1.25rem;
      padding-block: 0.5rem;
    }
    section {
      div {
        border-bottom: 1px solid hsl(30, 10%, 34%);
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        p {
          text-align: center;
          &:nth-child(2) {
            font-weight: bolder;
            color: hsl(14, 45%, 36%);
          }
        }
      }
    }
  }
</style>
